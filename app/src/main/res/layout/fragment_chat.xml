<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_30"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/img_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginStart="@dimen/dimen_20"
            android:background="@android:color/transparent"
            android:paddingVertical="4dp"
            android:paddingStart="10dp"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription,RtlSymmetry" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_chat_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:fontFamily="@font/bold"
        android:text="@string/chat_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_button_layout"
        app:layout_constraintTop_toTopOf="@id/cv_button_layout" />

    <ScrollView
        android:id="@+id/sv_chat_scroll"
        android:layout_width="@dimen/dimen_none"
        android:layout_height="@dimen/dimen_none"
        app:layout_constraintBottom_toTopOf="@id/ll_chat_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_title">

        <LinearLayout
            android:id="@+id/ll_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_chat_input"
        android:layout_width="@dimen/dimen_350"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_30"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/et_chat_input"
            android:layout_width="@dimen/dimen_none"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/regular"
            android:hint="@string/message_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="InefficientWeight" />

        <ImageButton
            android:id="@+id/img_btn_send"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginStart="@dimen/dimen_20"
            android:background="@android:color/transparent"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>