<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <View
        android:id="@+id/div_1"
        style="@style/Divider"
        app:layout_constraintBottom_toTopOf="@id/tv_total_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:text="@string/total"
        android:fontFamily="@font/semibold"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div_1" />

    <TextView
        android:id="@+id/tv_total_order_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:layout_marginHorizontal="3dp"
        android:text="@string/_2_items"
        android:layout_marginStart="@dimen/dimen_10"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_title"
        app:layout_constraintStart_toEndOf="@id/tv_total_title"
        app:layout_constraintTop_toTopOf="@id/tv_total_title" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_112_000"
        android:fontFamily="@font/bold"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_total_title" />

    <View
        android:id="@+id/div_2"
        style="@style/Divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_title" />


</androidx.constraintlayout.widget.ConstraintLayout>