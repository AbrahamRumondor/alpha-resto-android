<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.components.restoTab.RestoFragment">

    <Button
        android:id="@+id/all_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List All Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/get_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/all_menu_btn"
        app:layout_constraintStart_toEndOf="@+id/add_menu_btn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>